<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.erika.cookbook.RozsireneVyhledavani"
    android:id="@+id/mainRL">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jedna surovina do jednoho políčka"
            android:id="@+id/textView26"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hledejLL"
        android:layout_below="@id/note">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/surovinaACTV"
                android:layout_below="@+id/vyhledaneReceptyLL"
                android:layout_alignParentStart="true"
                android:layout_marginRight="50dp" />

            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/EANbutton"
                android:layout_marginRight="0dp"
                android:paddingRight="0dp"
                android:layout_marginLeft="-50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/scanean" />
        </LinearLayout>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hledej"
        android:id="@+id/hledatButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_style"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/vyhledaneReceptyLL"
    android:layout_below="@+id/hledejLL"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp">

    </LinearLayout>

</RelativeLayout>
