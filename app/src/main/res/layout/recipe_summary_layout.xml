<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oblibenyReceptChB"
                android:text="Oblíbený recept"
                tools:text="Oblíbený recept"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:buttonTint="@color/orangeDarker"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Kategorie "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/black" />

                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kategorie"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif"
                    android:typeface="monospace"
                    android:layout_weight="1"
                    android:textStyle="normal|bold" />
            </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hodnocení receptu"
                    android:id="@+id/textView18"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:numStars="5"
                    android:isIndicator="true"
                    android:layout_marginLeft="20dp" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Počet porcí"
                        android:id="@+id/textView15"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pocet_porci"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="20dp" />


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doba přípravy"
                    android:id="@+id/textView17"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doba_pripravy"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingLeft="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" min"
                    android:id="@+id/textView21" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doba vaření/pečení"
                    android:id="@+id/textView19"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doba_peceni"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingLeft="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" min"
                    android:id="@+id/textView22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stupne"
                    android:paddingLeft="3dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timerImageButton"
                    android:src="@drawable/ikona_timer"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:background="@android:color/transparent"
                    android:paddingLeft="7dp" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>