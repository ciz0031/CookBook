<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.erika.cookbook.EANdbManager">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Přidání nového EANu do databáze"
            android:id="@+id/textView24"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/scanEANbutton"
                android:paddingLeft="0dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/scanean" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EAN:"
                android:id="@+id/textView25"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-vyfoť pro získání čísla-"
                android:id="@+id/numberTV"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surovinaET"
            android:contentDescription="zadej název suroviny" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uložit do databáze"
            android:id="@+id/ulozitDoDBeanuButton"
            android:background="@drawable/btn_style"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />
    </LinearLayout>
</RelativeLayout>
