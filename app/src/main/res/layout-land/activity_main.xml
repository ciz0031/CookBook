    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CookBook"
        android:id="@+id/mainLL">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hledejLL">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hledejEditText"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Hledej"
                android:id="@+id/hledejButton"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="right"
                android:background="@drawable/btn_style"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="2"
                android:layout_marginBottom="7dp"
                android:paddingTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vyhledaneReceptyLL"
            android:layout_below="@+id/hledejLL"
            >

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/hledejLL"
            android:layout_alignParentStart="true"
            android:id="@+id/kategorieLL">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/snidane"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowSpan="1"
                    android:layout_columnSpan="2"
                    android:src="@drawable/breakfast_land"
                    android:clickable="true"
                    android:cropToPadding="true"
                    android:padding="2dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/svacina"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/snack_land"
                    android:clickable="true"
                    android:padding="2dp"
                    android:cropToPadding="true"
                    android:layout_columnSpan="2"
                    android:layout_weight="1"
                    android:maxWidth="200dp"
                    android:maxHeight="200dp" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/zakusky"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:src="@drawable/cookies_land"
                    android:clickable="true"
                    android:padding="2dp"
                    android:cropToPadding="true"
                    android:layout_columnSpan="2"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/obed"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:src="@drawable/lunch_land"
                    android:clickable="true"
                    android:padding="2dp"
                    android:cropToPadding="true"
                    android:layout_columnSpan="2"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/vecere"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:src="@drawable/dinner_land"
                    android:clickable="true"
                    android:padding="2dp"
                    android:cropToPadding="true"
                    android:layout_columnSpan="2"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/napoje"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:src="@drawable/drink_land"
                    android:clickable="true"
                    android:padding="2dp"
                    android:cropToPadding="true"
                    android:layout_columnSpan="2"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/zobrazitKategorieLL"
            >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Zobrazit kategorie"
                android:id="@+id/zobrazitKategorieButton"
                android:background="@drawable/btn_style"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:textStyle="bold"
                android:paddingBottom="5dp" />
        </LinearLayout>

</RelativeLayout>
